<ConfiEvent@BoxLayout>:
    canvas.after:
        Color:
            rgba: 0.8, 0.8, 0.8, 0.8
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 12)
            width: 1.5
        Line:
            rectangle: (self.x + 500, self.y, 0, self.height)
            width: 1
    
    size_hint: (None, None)
    size: (850, 500)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    orientation: "horizontal"

<EventHandler>:
    size_hint: None, None
    size: (500, 500)
    orientation: 'vertical'
    spacing: 20

    canvas.before:
        Color:
            rgba: (0.07, 0.07, 0.07, 0.95)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12, 0, 0, 12]
    Label: 
        index: 0
        text: 'Configura tu aventura!'
        font_size: 36
        color: 1, 1, 1, 0.8
        font_name: 'fonts/Roboto,Roboto_Condensed/Roboto_Condensed/RobotoCondensed-VariableFont_wght.ttf'
        size_hint: None, None
        width: self.parent.width
        height: self.texture_size[1] + 3
        pos_hint: {'center_x': 0.5, 'center_y': 0}
        canvas.before:
            Color:
                rgba: 0.8, 0.8, 0.8, 0.8
            Rectangle:
                pos: root.x, self.y - 5
                size: root.width, 2
            Color:
                rgba: (0.1, 0.1, 0.1, 1)
            RoundedRectangle:
                pos: root.x, self.y
                size: root.width, self.height
                radius: [12, 0, 0, 0]
        
<SelectorCaller>:
    size_hint: None, None
    size: (450, 30)
    pos_hint: {'center_x': 0.5, 'y': 0}
    
    canvas.before:
        Color:
            rgba: (0.18, 0.18, 0.18, 0.85)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]

    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 12)
            width: 1
    Image:
        source: self.parent.icon
        size_hint: None, None
        size: (30, 30)
        pos: (root.x + root.width - self.width, root.y)    
    Label:
        size_hint: None, None
        font_size: 20
        pos_hint: {'center_x': .5, 'center_y': .5}
        size: self.texture_size
        text: self.parent.name

<Event>:
    size_hint_y: None
    height: 40

    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            points: [self.x, self.y, self.x + self.width, self.y]
            width: 1  
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    

    Label:
        font_size: 20
        text: self.parent.title
        size_hint: None, None
        size: self.texture_size
        size_hint: None, None
        pos_hint: {'x': 0.02, 'center_y': .5}
        
