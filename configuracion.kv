<ConfiEvent@BoxLayout>:
    canvas.after:
        Color:
            rgba: 0.05, 0.05, 0.1, 1
        Line:
            rectangle: (self.x, self.y, self.width, self.height)
            width: 4    
        Line:
            rectangle: (self.x + 500, self.y, 0, self.height)
            width: 4
    
    size_hint: (None, None)
    size: (850, 500)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    orientation: "horizontal"

<EventHandler>:
    size_hint: None, None
    size: (500, 500)
    orientation: 'vertical'
    spacing: 20

    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.15, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label: 
        index: 0
        text: 'Configura tu aventura!'
        font_size: 36
        color: 1, 1, 1, 0.8
        font_name: 'fonts/Roboto,Roboto_Condensed/Roboto_Condensed/RobotoCondensed-VariableFont_wght.ttf'
        size_hint: None, None
        width: self.parent.width
        height: self.texture_size[1] + 3
        pos_hint: {'center_x': 0.5, 'center_y': 0}
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1   
            Rectangle:
                pos: root.x, self.y - 4
                size: root.width, 4
            Color:
                rgba: 0.05, 0.05, 0.1, 1
            Rectangle:
                pos: root.x, self.y
                size: root.width, self.height
        
 

<SelectorCaller>:
    size_hint: None, None
    size: (450, 30)
    pos_hint: {'center_x': 0.5, 'y': 0}
    
    canvas.before:
        Color:
            rgba: 0.15, 0.15, 0.2, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]

    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 12)
            width: 1
    Image:
        source: self.parent.icon
        size_hint: None, None
        size: (30, 30)
        pos: (root.x + root.width - self.width, root.y)    
    Label:
        size_hint: None, None
        font_size: 20
        pos_hint: {'center_x': .5, 'center_y': .5}
        size: self.texture_size
        text: self.parent.name

<Event>:
    size_hint_y: None
    height: 40
    canvas.before:
        Color:
            rgba: 0.15, 0.15, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            points: [self.x, self.y, self.x + self.width, self.y]
            width: 1  

    Label:
        font_size: 20
        text: self.parent.title
        size_hint: None, None
        size: self.texture_size
        size_hint: None, None
        pos_hint: {'x': 0.02, 'center_y': .5}
        

<EventInfo>
    orientation: 'vertical'
    spacing: 8
    StackLayout:
        size_hint: None, None
        size: (self.parent.width, 200)
        padding: 30, 0, 0, 0
        spacing: 8
        Image:
            source: root.img
            size_hint: None, None
            size: (200, 200)
           
            
        StackLayout:
            size_hint: None, None
            size: (240, 200)
            orientation: "tb-lr"
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [12]
            Label: 
                markup: True
                text: "[b]Tipo de aventura:[/b]"
                font_size: 22
                size_hint: None, None
                size: self.texture_size
            Label:
                text: root.type
                font_size: 20
                size_hint: None, None
                size: self.texture_size
                font_name: "fonts/symbola/Symbola.ttf"
            Label: 
                markup: True
                text: "[b]Nivel de peligro:[/b]"
                font_size: 22
                size_hint: None, None
                size: self.texture_size
            Label:
                text: root.danger
                color: root.danger_color
                font_size: 20
                size_hint: None, None
                size: self.texture_size
                font_name: "fonts/symbola/Symbola.ttf"
    Label:
        markup: True
        text: "[b] Descripcion: [/b]"
        font_size: 24
        size_hint: None, None
        size: self.texture_size 
        pos_hint:{'x': 0.05, 'y':0}
        index: 0
    Label:
        size_hint: None, None
        size: 450, self.texture_size[1] + 20
        pos_hint:{'center_x': .5, 'y':0}
        text_size: self.width - 20, None
        text: self.parent.description
        halign: "left"
        markup: 0
        font_size: 18
        
        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.2, 0.5
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [12]

        canvas.after:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                rounded_rectangle: (self.x, self.y, self.width, self.height, 12)
                width: 1    

    
