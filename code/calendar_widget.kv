<Calendar@BoxLayout>:
    size_hint: None, None
    width: 350
    height: 250
    pos_hint: {'center_x': .5, 'center_y': .5}
    orientation: "lr-tb"

<Day>:
    font_size: 24
    color: 0.8, 0.8, 0.8, 1
    size_hint: None, None
    size: (50, 50)

<ButtonContainer>:
    size_hint: None, None
    size: (360, 50)
    padding: 5, 10, 5, 0
    canvas.after:
        Color:
            rgba: 0.8, 0.8, 0.8, 0.8
        Line:
            points: (self.x, self.y + 50, self.x + self.width, self.y + 50)
            width: 1

<AdvanceMonth>:
    size_hint: None, None

<PreviousMonth>:
    size_hint: None, None
  
<TotalCalendar>:
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: (0.07, 0.07, 0.07, 0.95)
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Color:
            rgba: 0.8, 0.8, 0.8, 0.8
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 12)
            width: 1.2
        
        
    size_hint: None, None
    size: 360, 380
    padding: 0, 0, 0, 10
    pos_hint: {'right': 1, 'top': 1}
    
<Info>
    size_hint: None, None
    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.1, 1) 
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Color:
            rgba: 0.8, 0.8, 0.8, 0.8
        Line:
            points: (self.x, self.y, self.x + self.width, self.y)
            width: 1

    size: (360, 78)
    orientation: "vertical"
    padding: 8
    index: 0
    Label:
        text: "Enero"
        id: month
        font_size: 28
        color: 1, 1, 1, 0.8
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'center_x': .5, 'y': 0}
    Label:
        text: "2077"
        id: year
        font_size: 20
        color: 1, 1, 1, 0.8
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'center_x': .5, 'y': 0}
        
    