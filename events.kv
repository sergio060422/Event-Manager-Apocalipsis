<Header>:
    pos: (40, 768 - self.height - 40)
    size_hint: None, None
    size: (1200, 100)
    orientation: "vertical"
    isEvent: False

    Image:
        source: "assets/titleEventList.png"
        size_hint: None, None
        size: (300, 60)
        index: 0
    
    Label:
        size_hint: None, None
        height: 16
    
    JoinEvent:
        id: join
        size_hint: None, None
        font_size: 20
        size: (285, self.line_height + self.padding[0]*2)
        background_color: (0, 0, 0, 0)
        foreground_color: 0.8, 0.8, 0.8, 1
        cursor_color: 1, 1, 1, 1
        hint_text: "Buscar aventura..."
        multiline: False
        text_size: (300, None)
        padding: 8

        canvas.after:
            Color:
                rgba: (0.8, 0.8, 0.8, 0.8)
            Line:
                rounded_rectangle: (self.x, self.y, self.width + 35, self.height, 20)
                width: 1.4
            Color:
                rgba: (0.8, 0.8, 0.8, 0.8)
            Line:
                points: (self.x, self.y - 8, 1240, self.y - 8)
                width: 1.5
        
    Label:
        index: 0
    
<ScrollEventList>:
    pos: (0, -150)
    bar_width: 16
    bar_color: 0.8, 0.8, 0.8, 0.8
    bar_inactive_color: 0.8, 0.8, 0.8, 0.8

<RunningEventList>:
    padding: 40, 16, 40, 40
    spacing: 20
    size_hint_y: None
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    orientation: "lr-tb"
       

<RunningEvent>:
    size_hint: None, None
    size: (285, 460)
    orientation: "vertical"

    canvas.before:
        Color:
            rgba: (0.12, 0.12, 0.12, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    
    StackLayout:
        size_hint: None, None
        size: (285, 285)
     
        Image:
            id: image
            index: 0
            source: "assets/event_running_images/1.png"
            size_hint: None, None
            size: (285, 285)

            canvas.after:
                Color:
                    rgba: 0.8, 0.8, 0.8, 0.8
                Line:
                    points: (self.x, self.y, self.x + self.width, self.y)
                    width: 1
        
    BoxLayout:
        orientation: "vertical"
        size_hint: None, None
        height: 170
        EventName:
            id: inputName
            markup: True
            text: "[b]" + self.textName + "[/b]"
            text_size: (280, None)
            size_hint: None, None
            size: self.texture_size
            font_size: 17
            padding: 8
        Ini:
            id: timeIni
            markup: True
            text: "[b] Inicio: [/b]" + self.ini
            font_size: 17
            size_hint: None, None
            size: self.texture_size
            padding: 8
        End:
            id: timeEnd
            markup: True
            text: "[b] Final: [/b]" + self.end
            font_size: 17
            size_hint: None, None
            size: self.texture_size
            padding: 8
        EventNum:
            id: eventNum
            markup: True
            text: "[b] ID de Aventura: [/b]" + self.enum
            font_size: 17
            size_hint: None, None
            size: self.texture_size
            padding: 8
        Label:
            size_hint: None, None
            size: (285, 20)
        BoxLayout:
            Label:
                size_hint: None, None
                width: 200
                height: 20
            ShowEventButton:
                source: "assets/openIcon.png"
                size_hint: None, None
                size: (40, 40)
            DeleteButton:
                source: "assets/deleteIcon.png" 
                size_hint: None, None
                size: (40, 40)
        

    Label:
        index: 0
      
    
<ShowEventWindow>:
    size_hint: None, None
    size: 850, 540
    canvas.before:
        Color:
            rgba: (0.07, 0.07, 0.07, 1)
        Rectangle:
            pos: self.pos 
            size: self.size
 
    pos: (-850, 114)
    padding: 20
    spacing: 20
    BoxLayout:
        size_hint_x: None
        width: 300
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: (1, 0.07, 0.07, 0)
            Rectangle:
                pos: self.pos 
                size: self.size
        Image:
            source: root.img
            size_hint: None, None
            size: (300, 300)
            index: 0
            canvas.after:
                Color:
                    rgba: 0.8, 0.8, 0.8, 0.8
                Line:
                    points: (self.x, self.y, self.x + self.width, self.y)
                    width: 1
           
        Label:
            size_hint: None, None
            height: 10
        Label: 
            markup: True
            text: "[b]Tipo de aventura:[/b]"
            font_size: 20
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': .5, 'y': 0}
        BoxLayout:
            id: typeContainer
            size_hint: None, None
            size: (100, 50)
            pos_hint: {'center_x': .5, 'y': 0}
        Label:
            size_hint: None, None
            height: 10
        Label: 
            markup: True
            text: "[b]Nivel de peligro[/b]"
            font_size: 20
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': .5, 'y': 0}
        Label:
            text: root.danger
            color: root.dg_color
            font_size: 18
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': .5, 'y': 0}
        Label: 
            markup: True
            text: "[b]Ubicacion[/b]"
            font_size: 20
            size_hint: None, None
            size: self.texture_size
            padding: 0, 20, 0, 0
            pos_hint: {'center_x': .5, 'y': 0}
        Label:
            text: root.place
            font_size: 18
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': .5, 'y': 0}       
        Label:
            index: 0
    BoxLayout:
        size_hint_x: None
        width: 550
        orientation: "vertical"
        spacing: 8

        Label: 
            markup: True
            text: "[b]" + root.name + "[/b]"
            font_size: 28
            size_hint: None, None
            size: self.texture_size
        Label:
            size_hint: None, None
            width: 490
            height: 1.5
            canvas.before:
                Color:
                    rgba: (0.8, 0.8, 0.8, 0.8)
                Rectangle:
                    pos: self.pos 
                    size: self.size
        Label:
            markup: True
            text: "[b] Descripcion: [/b]"
            font_size: 22
            size_hint: None, None
            size: self.texture_size 
            index: 0
        Label:
            size_hint: None, None
            size: 450, self.texture_size[1] + 20
            text_size: self.width - 20, None
            text: root.description
            halign: "left"
            markup: 0
            font_size: 18
            index: 0
    
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.2, 0.5
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [12]

            canvas.after:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 12)
                    width: 1 
        Label:
            markup: True
            text: "[b] Recursos necesarios: [/b]"
            font_size: 22
            size_hint: None, None
            size: self.texture_size 
        NeedResources:
            id: need
            index: 0
            size_hint: None, None
            width: 500
            spacing: 4
            padding: 0
        
        BoxLayout:
            size_hint: (1, 1)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0
                Rectangle:
                    pos: self.pos
                    size: self.size
                    
            BoxLayout:
                orientation: "vertical"
                Ini:
                    markup: True
                    text: "[b] Inicio: [/b]"
                    font_size: 22
                    size_hint: None, None
                    size: self.texture_size
                Label:
                    markup: True
                    text: root.dateini
                    font_size: 20
                    size_hint: None, None
                    size: self.texture_size
            Label:
                size_hint: None, None
                width: 130
            BoxLayout:
                orientation: "vertical"
                End:
                    markup: True
                    text: "[b] Final: [/b]"
                    font_size: 22
                    size_hint: None, None
                    size: self.texture_size

                Label:
                    markup: True
                    text: root.datend
                    font_size: 20
                    size_hint: None, None
                    size: self.texture_size
            Label:
                size_hint: None, None
                width: 150
            BoxLayout:
                orientation: "horizontal"
                size_hint: None, None
                Label:
                    markup: True
                    text: "[b] ID: [/b]"
                    font_size: 22
                    size_hint: None, None
                    size: self.texture_size
                Label:
                    text: " " + root.eventNum
                    font_size: 20
                    size_hint: None, None
                    size: self.texture_size 
            Label:
                index: 0                
        